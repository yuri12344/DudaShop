definitions:
  Category:
    required:
      - name
      - slug
    type: object
    properties:
      id:
        title: ID
        type: integer
        readOnly: true
      name:
        title: Name
        type: string
        maxLength: 50
        minLength: 1
      slug:
        title: Slug
        type: string
        format: slug
        pattern: ^[-a-zA-Z0-9_]+$
        maxLength: 200
        minLength: 1
  OrderItem:
    required:
      - product
      - price
    type: object
    properties:
      id:
        title: ID
        type: integer
        readOnly: true
      product:
        title: Product
        type: integer
      price:
        title: Price
        type: string
        format: decimal
      quantity:
        title: Quantity
        type: integer
  Order:
    required:
      - first_name
      - last_name
      - email
      - address
      - postal_code
      - city
    type: object
    properties:
      first_name:
        title: First name
        type: string
        maxLength: 50
        minLength: 1
      last_name:
        title: Last name
        type: string
        maxLength: 50
        minLength: 1
      email:
        title: Email
        type: string
        format: email
        maxLength: 254
        minLength: 1
      address:
        title: Address
        type: string
        maxLength: 250
        minLength: 1
      postal_code:
        title: Postal code
        type: string
        maxLength: 20
        minLength: 1
      city:
        title: City
        type: string
        maxLength: 100
        minLength: 1
      items:
        type: array
        items:
          $ref: '#/definitions/OrderItem'
        readOnly: true
  Product:
    required:
      - name
      - slug
      - price
      - category
    type: object
    properties:
      id:
        title: ID
        type: integer
        readOnly: true
      name:
        title: Name
        type: string
        maxLength: 200
        minLength: 1
      slug:
        title: Slug
        type: string
        format: slug
        pattern: ^[-a-zA-Z0-9_]+$
        maxLength: 200
        minLength: 1
      image:
        title: Image
        type: string
        maxLength: 200
        x-nullable: true
      description:
        title: Description
        type: string
      price:
        title: Price
        type: string
        format: decimal
      available:
        title: Available
        type: boolean
      created:
        title: Created
        type: string
        format: date-time
        readOnly: true
      updated:
        title: Updated
        type: string
        format: date-time
        readOnly: true
      category:
        title: Category
        type: integer
